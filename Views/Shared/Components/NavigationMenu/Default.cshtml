@{
}

@model IEnumerable<string>

<a class="btn btn-nlock btn-outline-secondary" asp-action="Index" asp-controller="Home"
   asp-route-category="">
    Home
</a>

@*this helps print out the list of categories*@

@foreach (string category in Model)
{
    <a class="btn btn-block @(category == ViewBag.SelectedCat ? "btn-primary" : "btn-outline-secondary")"
       asp-action="Index" asp-controller="Home"
       asp-route-category="@category"
       asp-route-page="1">
        @category
    </a>
}